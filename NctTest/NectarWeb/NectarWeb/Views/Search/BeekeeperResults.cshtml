@model IEnumerable<NectarWeb.Models.Beekeeper>

@{
    ViewData["Title"] = "Merci | Entrez en relation avec un apiculteur";
    ViewData["MetaDescription"] = "Merci d'avoir rempli le formulaire et de permettre aux apiculteurs de faire fructifier leurs ruches.";
}

<link rel="stylesheet" href="~/css/pages/ResultsBeekeepers.css?id=2" />
<script type="text/javascript" src="~/js/pages/BeekeeperResults.js?id=4"></script>

<div class="jumbotron text-center background-page">
    <h1 class="display-3 title-main">Merci de faire confiance à Nectar</h1>
    <p class="lead subtitle-main"><strong>Veuillez consulter vos e-mails.</strong> Voici la liste des 5 apiculteurs les plus proches :</p>
    <hr>
    <div style="text-align:center;">
        @foreach (var item in Model)
        {
            var id = item.Id;
            <div class="div-results">
                <h3 class="beekeeper-names">@item.FirstName @item.LastName</h3>
                <p>
                    @item.ZipCode - @item.City
                    <br />
                    <div style="display: none;" id="div-contact-@id">
                        @foreach (var tel in item.Phone)
                        {
                            if (!string.IsNullOrEmpty(tel))
                            {
                        <a href="tel:@tel">@tel</a>
                        <br />
                            }
                        }
                        <a href="mailto: @item.Email">@item.Email</a>
                    </div>
                    <button id="btn-contact-@id" onclick="document.getElementById('btn-contact-@id').style.display = 'none';document.getElementById('div-contact-@id').style.display = 'block';" class="btn btn-primary">Voir le contact</button>
                </p>
            </div>
            <br />
        }
    </div>
    @*Having trouble? <a href="">Contact us</a>*@
    @*<p class="lead">
          <a class="btn btn-primary btn-sm" href="https://bootstrapcreative.com/" role="button">Continuer sur notre blog</a>
        </p>*@
</div>